<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Player</title>
    <link rel="stylesheet" href="styles/index.css">
</head>
<body>
    <div class="background-image"></div>
    <div class="container">
        <div class="header">
            <form action="/song" method="post">
                <input type="text" placeholder="Enter song" name="song">
                <button type="submit"><i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i></button>
            </form>
            <% if(locals.message){ %>
                <p style="color: white;"><%= message %></p>
            <% } %>
        </div>
        <div class="songList">
            <% songs.forEach(function(song){ %>
                <div class="songItem">
                    <form action="/song" method="post">
                        <input type="hidden" name="song" value="<%= song %>">
                        <button type="submit"><i class="fa-solid fa-play" style="color: #ffffff;"></i></button>
                    </form>
                    <img src="images/<%= song %>.png" alt="">
                    <span class="songName"><%= song %></span>
                </div>
            <% }) %>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/7c8801c017.js" crossorigin="anonymous"></script>
</body>
</html>
